# AI Study Assistant Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required API Keys
# =============================================================================

# Cohere API Key (for embeddings)
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Google Gemini API Key (for LLM)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Qdrant Vector Database
# =============================================================================

# Qdrant Cloud URL
# Get from: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Collection name for storing vectors
COLLECTION_NAME=study_materials

# =============================================================================
# Backend API Server (NestJS)
# =============================================================================

# URL of your NestJS backend for calendar API
API_SERVER_URL=https://api.mergeedu.app

# =============================================================================
# Document Processing
# =============================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Chunking configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=100

# =============================================================================
# Retrieval Configuration
# =============================================================================

# Number of chunks to retrieve
TOP_K_RESULTS=5

# Minimum relevance score (0-1)
MIN_RELEVANCE_SCORE=0.3

# =============================================================================
# API Timeouts (seconds)
# =============================================================================

CALENDAR_API_TIMEOUT=10
EMBEDDING_API_TIMEOUT=30
LLM_API_TIMEOUT=60

# =============================================================================
# Server Configuration
# =============================================================================

PORT=8001
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# Model Configuration
# =============================================================================

# Cohere embedding model
EMBEDDING_MODEL=embed-english-v3.0
EMBEDDING_DIMENSION=1024

# Gemini model (gemini-1.5-pro or gemini-pro)
GEMINI_MODEL=gemini-1.5-pro
